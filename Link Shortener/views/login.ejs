<!DOCTYPE html>
<html>

<head>
    <%- include("partials/head")%>
</head>

<body>
    <%-include("partials/nav")%>
    <div class="login-clean">
        <form class="login_form" method="POST" onsubmit="login(event)">
            <h1 class="display-4 text-center">Login</h1>
            <h2 class="sr-only">Login Form</h2>
            <div class="illustration"><i class="icon ion-ios-navigate"></i></div>
            <div class="form-group"><input class="form-control" type="email" name="email" placeholder="Email"></div>
            <div class="form-group"><input class="form-control" type="password" name="password" placeholder="Password"></div>
            <div class="form-group"><button class="btn btn-primary btn-block" type="submit">Login</button></div>
            <a class="forgot" href="/register">Don't have an account register here</a></form>
    </div>
    <script>
        async function login(event){
            event.preventDefault()
            const {email,password} = event.target
            const user = await axios.post("https://url-shortz.herokuapp.com/login",{
                email:email.value,password:password.value
            })
            if(user.data=="0"){alert("wrond credentials")}
            else{
                window.location.replace("/");
            }
        }
    </script>
    <%-include("partials/footer")%>
</body>

</html>